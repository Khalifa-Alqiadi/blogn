<%- include('include/head.ejs')%>
<%- include('include/nav.ejs')%>


<div class="container mt-5">
    <h1 class="text-center">Register</h1>
    <% if (message) { %>
        <div class="alert alert-<%= message.type === 'success' ? 'success' : 'danger' %>" role="alert">
            <%= message.body %>
        </div>
    <% } %>
    <form method="post" action="/register" class="col-sm-12">
        <div class="mb-3">
            <label for="fullname" class="form-label">Your Full Name</label>
            <input 
                type="text"
                class="form-control <%= errors.fullname ? 'is-invalid' : '' %>"
                id="fullname"
                name="fullname"
                value="<%= FormData.fullname %>"
                
            >
            <% if(errors.fullname){ %>
                <div id="fullname" class="invalid-feedback">
                    <%= errors.fullname[0] %>
                </div>
            <% } %>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input 
                type="email"
                class="form-control <%= errors.email ? 'is-invalid' : '' %>"
                id="email"
                name="email"
                value="<%= FormData.email %>"
            >
            <% if(errors.email){ %>
                <div id="email" class="invalid-feedback">
                    <%= errors.email[0] %>
                </div>
            <% } %>
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input 
                type="password"
                class="form-control <%= errors.password ? 'is-invalid' : '' %>"
                id="password"
                name="password"
                value="<%= FormData.password %>"
            >
            <% if(errors.password){ %>
                <div id="password" class="invalid-feedback">
                    <%= errors.password[0] %>
                </div>
            <% } %>
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>    
</div>


<%- include('include/footer.ejs')%>